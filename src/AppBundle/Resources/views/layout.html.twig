<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Symfony2 StackOverflow Edition</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('/bundles/app/css/main.css') }}">
        <script   src="https://code.jquery.com/jquery-1.12.3.min.js"   integrity="sha256-aaODHAgvwQW1bFOGXMeX+pC4PZIPsvn2h1sArYOhgXQ="   crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('index') }}">
                        Symfony2 StackOverflow
                    </a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        {% if is_granted('ROLE_USER') %}
                            <li>
                                <a href="{{ path('sonata_admin_dashboard') }}">Admin</a>
                            </li>
                        {% endif %}
                        <li>
                            <a href="{{ path('content_post_create') }}">
                                Create Post
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('content_post_list') }}">
                                Post List
                            </a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            {% if app.user %}
                                <a href="{{ path('logout') }}">Logout</a>
                            {% else %}
                                <a href="{{ path('login') }}">Login</a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {% block body %} {% endblock %}
                </div>
            </div>
        </div>
    </body>
    <script src="{{ asset('/bundles/app/js/main.js') }}"></script>
</html>